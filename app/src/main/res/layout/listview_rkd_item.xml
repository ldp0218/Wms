<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="单据编号" />

    <TextView
        android:id="@+id/editText_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/textView5"
        android:elevation="1dp"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_riqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText_name"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:labelFor="@+id/textView_date"
        android:text="录单日期" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_name"
        android:layout_toRightOf="@+id/textView_riqi"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView_gyslabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/textView_gys"
        android:labelFor="@+id/textView_gys"
        android:text="供应商" />

    <TextView
        android:id="@+id/textView_gys"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText_name"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView_jsrlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_riqi"
        android:layout_marginBottom="5dp"
        android:paddingRight="20dp"
        android:text="经手人" />

    <TextView
        android:id="@+id/textView_jsr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_riqi"
        android:layout_toRightOf="@+id/textView_jsrlabel"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView_cklabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_riqi"
        android:layout_toLeftOf="@+id/textView_ck"
        android:paddingRight="25dp"
        android:text="仓库" />

    <TextView
        android:id="@+id/textView_ck"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView_riqi"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView_bzlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_jsrlabel"
        android:layout_marginRight="30dp"
        android:text="备注" />

    <TextView
        android:id="@+id/textView_bz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_jsrlabel"
        android:layout_toRightOf="@+id/textView_bzlabel"
        android:textColor="@android:color/black" />
</RelativeLayout>