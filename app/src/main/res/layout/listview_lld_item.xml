<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="领料单编号" />

    <TextView
        android:id="@+id/textView_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/textView5"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_riqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_no"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:labelFor="@+id/textView_date"
        android:text="录单日期" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_no"
        android:layout_toEndOf="@+id/textView_riqi"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView_llrlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_no"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/textView_llr"
        android:labelFor="@+id/textView_llr"
        android:text="领料人" />

    <TextView
        android:id="@+id/textView_llr"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView_no"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView_cklabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_riqi"
        android:layout_marginEnd="30dp"
        android:paddingBottom="5dp"
        android:text="仓库" />

    <TextView
        android:id="@+id/textView_ck"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/textView_riqi"
        android:layout_toEndOf="@+id/textView_cklabel"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView_bzlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_cklabel"
        android:layout_marginEnd="30dp"
        android:text="备注" />

    <TextView
        android:id="@+id/textView_bz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_cklabel"
        android:layout_toEndOf="@+id/textView_bzlabel"
        android:textColor="@android:color/black" />
</RelativeLayout>