<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_cp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/textView_nolabel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="卡号" />

    <TextView
        android:id="@+id/textView_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/textView_nolabel"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_namelabel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_no"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:text="名称" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_no"
        android:layout_toEndOf="@+id/textView_namelabel"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView_bzlabel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_namelabel"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:paddingEnd="5dp"
        android:text="包装编码" />

    <TextView
        android:id="@+id/textView_bzcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_namelabel"
        android:layout_toEndOf="@+id/textView_bzlabel"
        android:ellipsize="end"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView_numlabel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_bzlabel"
        android:layout_marginEnd="5dp"
        android:text="数量" />

    <TextView
        android:id="@+id/textView_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_bzlabel"
        android:layout_toEndOf="@+id/textView_numlabel"
        android:textColor="@android:color/black" />

</RelativeLayout>
