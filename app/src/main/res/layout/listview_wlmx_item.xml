<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/layout_wl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/textView_nolabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:text="卡号"
            android:textSize="14sp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/textView_no"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textView_nolabel"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textView_namelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_nolabel"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:text="成品名称" />

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_nolabel"
            android:layout_toEndOf="@+id/textView_namelabel" />

        <TextView
            android:id="@+id/textView_modellabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_nolabel"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/textView_model"
            android:text="型号" />

        <TextView
            android:id="@+id/textView_model"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView_nolabel" />

        <TextView
            android:id="@+id/textView_klnumlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_namelabel"
            android:layout_marginEnd="10dp"
            android:text="可领数量" />

        <TextView
            android:id="@+id/textView_klnum"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_namelabel"
            android:layout_toEndOf="@+id/textView_klnumlabel" />

        <TextView
            android:id="@+id/textView_cknumlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_namelabel"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/textView_cknum"
            android:text="领取数量" />

        <TextView
            android:id="@+id/textView_cknum"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView_namelabel" />

        <TextView
            android:id="@+id/textView_remarklabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_cknumlabel"
            android:layout_marginEnd="10dp"
            android:text="超领说明" />

        <TextView
            android:id="@+id/textView_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_cknumlabel"
            android:layout_toEndOf="@+id/textView_remarklabel" />

    </RelativeLayout>

    <!-- 以下都是侧滑菜单的内容依序排列 -->
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/red_ff4a57"
        android:text="删除"
        android:textColor="@android:color/white"/>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
